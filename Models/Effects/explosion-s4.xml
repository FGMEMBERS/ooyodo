<?xml version="1.0"?>

<PropertyList>
	<path>explosion-s.ac</path>

		  <animation>
		    <type>billboard</type> 
    <object-name>Plane4</object-name>
    <object-name>Plane41</object-name>
    <object-name>Plane42</object-name>
    <object-name>Plane</object-name>
    <object-name>Plane2</object-name>
    <object-name>Plane3</object-name>
                    <spherical type="bool">true</spherical>
                  </animation>
		  <animation>
		    <type>material</type> 
    <object-name>Plane4</object-name>
    <object-name>Plane41</object-name>
    <object-name>Plane42</object-name>
    <object-name>Plane</object-name>
    <object-name>Plane2</object-name>
    <object-name>Plane3</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
		    <emission>	
		      <red>1</red>	
		      <green>1</green>	
		      <blue>1</blue>
		    </emission>
                    <texture>explosion.png</texture>
		  </animation>

  <animation>
    <type>timed</type>
    <object-name>Plane4</object-name>
    <object-name>Plane41</object-name>
    <object-name>Plane42</object-name>
    <object-name>Plane</object-name>
    <object-name>Plane2</object-name>
    <object-name>Plane3</object-name>
    <duration-sec>1.50</duration-sec>
  </animation>

   <!-- Transparent Surfaces for Rembrandt rendering -->
   <effect>
       <inherits-from>Effects/model-transparent</inherits-from>
   　  <condition>
      　 <property>sim/rendering/rembrandt/enabled</property>
   　  </condition>
    <object-name>Plane4</object-name>
    <object-name>Plane41</object-name>
    <object-name>Plane42</object-name>
    <object-name>Plane</object-name>
    <object-name>Plane2</object-name>
    <object-name>Plane3</object-name>
   </effect>

</PropertyList>
